<Window x:Class="Thetis.Controls.W8Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" Loaded="Window_Loaded" BorderThickness="0" BorderBrush="Transparent" ResizeMode="NoResize"
             WindowStyle="None" Background="#550d49" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" 
             d:DesignHeight="700" d:DesignWidth="1000">


    <Grid x:Name="panelMessage" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <StackPanel Orientation="Vertical" Background="#550d49" HorizontalAlignment="Center">

            <TextBlock x:Name="DisplayMessage" Text="test" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="10"
                       HorizontalAlignment="Center" FontWeight="Light"/>
            <telerik:RadButton x:Name="btnOK" Content="OK" telerik:StyleManager.Theme="Windows8Touch" Background="Transparent"
                               Click="btnOK_Click" Margin="10" FontSize="18" Width="100" Height="40" Foreground="White" 
                               HorizontalAlignment="Center"/>
            
        </StackPanel>
    </Grid>
</Window>
