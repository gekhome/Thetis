<UserControl x:Class="Thetis.Controls.NavPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Background="Transparent">
            <telerik:RadButton telerik:StyleManager.Theme="Windows8">
                <Image Name="btnPrevious" Source="/Thetis;component/Shell/Images/Metro/Arrows-Left-round-icon.png" 
                   Stretch="UniformToFill" MouseDown="navButton_Click" Width="48" Height="48" />
            </telerik:RadButton>
            <telerik:RadButton telerik:StyleManager.Theme="Windows8" >
                <Image Name="btnHome" Source="/Thetis;component/Shell/Images/Metro/Home.png" Stretch="UniformToFill" 
                   MouseDown="navButton_Click" Width="48" Height="48" />
            </telerik:RadButton>
        </StackPanel>
    </Grid>
</UserControl>
